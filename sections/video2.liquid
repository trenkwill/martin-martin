
{% if section.settings.url != blank %}
<video width="100%" height="100%" autoplay muted loop class="html-video" poster="{{section.settings.poster}}">>
  <source src="{{ section.settings.url }}" type="video/mp4">
  Your browser does not support the video tag.
</video>
{% endif }



{% schema %}
{
  "name": "Video html",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "url",
      "label": "Lien de la vidéo",
	  "info" : "Mettre une video au format .mp4"
    },
    {
      "type": "image_picker",
      "id": "poster",
      "label": "Image de couverture"
    }
  ],
  "presets": [
    {
      "name": "Video html",
      "category": "Vidéo"
    }
  ]
}
{% endschema %}